<%= render 'users/shared/up'%>

<p> <%= notice %> </p>
<br><br>
<div class="columns is-mobile is-centered">
        <div class="col-is-one-thrid">
        <div class="card" style="background-color:white">
        <div class="card-content">
      <div class="media">
        <div class="media-content">
     <div class="card-title"><h1 class="title is-2" style="color: black">Editar Servicio</h1></div>
    <div class="card-body">
    <br>
<%= form_with(model: @servicio, method: :patch, url: servicio_update_path(@servicio.id)) do |form| %>

    <div class="field">
        <%=form.label :nombre%>
        <%=form.text_field :nombre%>
    </div>

    <div class="field">
        <%=form.label :descripcion%>
        <%=form.text_field :descripcion%>
    </div>

    <div class="field">
        <%=form.label :max_capacidad%>
        <%=form.number_field :max_capacidad%>
    </div>

    <div class="field">
        <%=form.label :precio%>
        <%=form.number_field :precio%>
    </div>

    <div class="field">
        <%=form.label :imagen%>
        <%=form.text_field :imagen%>
    </div>

    <% if current_user.tipo == 'Administrador' %>
        <div class="field">
            <%=form.label :status%>
            <%= form.select :status, options_for_select(["Elige uno", "Aceptado", "Rechazado"],:disabled => ["Elige uno"]), :class => 'genForm_dropBox' %>
        </div>
    <% end %>

    <div class="action">
        <%=form.submit%>
    </div>

<% end %>
</div>
  </div>
  </div>
  </div>
  </div>
<%= link_to "Volver al listado de Servicios", servicios_index_path, {:style=>'color: white;', :class => "button is-link"} %>
  </div>
</div>
