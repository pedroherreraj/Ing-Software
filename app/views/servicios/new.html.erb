<%= render 'users/shared/up'%>

<p> <%= notice %> </p>
<br><br>
<div class="columns is-mobile is-centered">
        <div class="col-is-one-thrid">
        <div class="card" style="background-color:white">
        <div class="card-content">
      <div class="media">
        <div class="media-content">
     <div class="card-title"><h1 class="title is-2" style="color: black">Crear Nuevo Servicio</h1></div>
    <div class="card-body">
    <br>
<%= form_with(model: @servicio, method: :post) do |form| %>

    <div class="field">
        <%=form.label :nombre, style: "color:black"%>
        <%=form.text_field :nombre%>
    </div>

    <div class="field">
        <%=form.label :descripcion, style: "color:black"%>
        <%=form.text_field :descripcion%>
    </div>

    <div class="field">
        <%=form.label :max_capacidad, style: "color:black"%>
        <%=form.number_field :max_capacidad%>
    </div>

    <div class="field">
        <%=form.label :precio, style: "color:black"%>
        <%=form.number_field :precio%>
    </div>

    <div class="field">
        <%=form.label :imagen, style: "color:black"%>
        <%=form.text_field :imagen%>
    </div>

    <div class="field">
        <%=form.label :Comuna, style: "color:black"%>
        <%= form.collection_select :comuna, Comuna.all, :id, :nombre %>
    </div>

    <div class="action">
        <%=form.submit%>
    </div>

<% end %>
    </div>
    </div>
      </div>
      </div>
      </div>



<%= link_to "Volver al listado de Servicios", servicios_index_path, {:style=>'color: white;', :class => "button is-link"} %>
