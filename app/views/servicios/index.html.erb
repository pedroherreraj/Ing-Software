            <div class="card">
            <div class="card-image">
            <figure class="image is-240x240">
            <img src="<%= servicio.imagen %>" alt="Placeholder image">
            </figure>
            </div>
            <div class="card-content">
          <div class="media">
            <div class="media-content">
             <p class="title is-4" style="color: black"><em><%= servicio.nombre %></em></p>
              </div>
          </div>
          <%= link_to 'Ver detalle', servicio_seleccionado_path(servicio.id) %>
              </div>
      </div>
        </div>
            </tr>
            <% end %>
        <% end %>
<% end %>
</div>
<% end %>

<% if current_user %>
<a href="new.html" class="button is-link">Crear Nuevo Servicio </a>
<% end %>
<a href="../welcome/index.html" class="button is-link">Volver al Inicio </a>
