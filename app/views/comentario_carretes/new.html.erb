<%= render 'users/shared/up'%>

<h1> Nuevo comentario para <%=@carrete.titulo%></h1>

<p> <%= notice %> </p>

<%= form_with(model: @comentario_carrete, method: :post) do |form| %>


    <div class="field">
        <%= form.hidden_field :id_carrete, value: @carrete.id%>
    </div>

    <div class='field'>
        <%=form.label :contenido%>
        <%=form.text_field :contenido%>
    </div>

    <div class='action'>
        <%=form.submit%>
    </div>


<% end %>

<p>
  <%= link_to "Volver al listado de Mis Comentarios", comentario_carretes_id_path(@carrete.id) %>
</p>
