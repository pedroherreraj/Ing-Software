<%= render 'users/shared/up'%>


<section class="hero is-link is-fullheight">
  <div class="hero-body">
    <div class="container">
    <div class='columns'>
      <div class='column'>
      <h1 class="title is-1" style="color: white">Crear Nuevo Usuario</h1>
<div class="box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "card"}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

    <div class="field">
    <%= f.label :username, class: 'label' %>
    <div class="control">
      <%= f.text_field :username, autofocus: true, autocomplete: "username"  %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :edad, class: 'label' %>
    <%= f.number_field :edad, {min: 0, max: 100} %>
  </div>

  <div class="field">
    <%= f.label :telefono, class: 'label' %>
    <%= f.number_field :telefono,{min: 100000000, max: 999999999}%>
  </div>

  <div class="field">
    <%= f.hidden_field :dinero, value: 0%>
  </div>

  <div class="field">
    <%= f.hidden_field :tipo, value: "Cliente"%>
  </div>


  <div class="field">
  <div class="control">
    <label class="checkbox">
      <input type="checkbox">
      I agree to the <a href="#">terms and conditions</a>
    </label>
  </div>
</div>


  <div class="actions">
    <%= f.submit "Sign up", class: 'button is-link' %>
  </div>

<% end %>

</div>
<h1 class="title is-3" style="color: white">Ya tienes una cuenta?</h1>
      <a href="/users/sign_in" class="button is-success">Log In </a>
    </div>
  </div>
      </div>
      <div class='column'>
      </div>
    </div>
</section>